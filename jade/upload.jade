//- Upload Form
extends _base

append head
	title Upload a Recipe

block navigation
	a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
		span.icon-bar
		span.icon-bar
		span.icon-bar
	.brand Seeker
	.nav-collapse
		ul.nav
			li
				a(href='/') Home
			li.active
				a(href="/upload") Upload Recipe

block content
	form.form(method="post", action="/upload", enctype="multipart/form-data", accept-charset="utf-8")
		label Author
		input(type="text", name="author")
		label Recipe
		input(type="file", name="recipe")
		.form-actions
			button.btn(type="submit") Upload

block localJS
